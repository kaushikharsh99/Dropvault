{
  "manifest_version": 3,
  "name": "DropVault",
  "version": "2.6",
  "description": "One-click capture for your Knowledge Tree.",
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "scripting",
    "contextMenus",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "commands": {
    "run-capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Instantly save current page"
    }
  },
  "oauth2": {
    "client_id": "CLIENT_ID_PLACEHOLDER",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://www.youtube.com https://youtube.com https://www.youtube-nocookie.com; connect-src 'self' http://localhost:* ws://localhost:* https://*.firebaseio.com https://*.googleapis.com https://*.ngrok-free.dev;"
  }
}
